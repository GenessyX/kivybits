#: import Window kivy.core.window.Window
#: set gap 0.015 * Window.width
<CAMIMenuBlock>:
    canvas.before:
        # Draw the image underneath the touch highlighting
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            source: self.source
            size: self.size
            pos: self.pos
    size_hint_x: None
    width: 0
    visible: False


<CAMIMenuRow>
    text: ''
    callback: None
    number: None
    spacing: 5
    canvas.after:
        # Draw the touch highlighting
        Color:
            rgba: [0, 0, 0, 0] if not self.pressed else [0.75, 0.75, 0, 0.65]
        Rectangle:
            size: self.size
            pos: self.pos

    CAMIMenuBlock:
        # Houses the number image before the label
        text: str(root.number)
        callback: root.callback
        source: "graphics/menuicon{0}.png".format(root.number % 6) if root.number is not None else "graphics/blank.png"
        width: self.height

    BoxLayout:
        id: box
        canvas:
            Color:
                rgba: 0.75, 0.75, 0.1, 0.5
            RoundedRectangle:
                size: self.size
                pos: self.pos

        padding: gap, 0, 0, 0
        Label:
            text: root.text + " - " + str(root.number)
            text_size: self.size
            halign: 'left'
            valign: 'center'
    CAMIMenuBlock:
        id: block0
        visible: len(root.post_icons) > 0
        width: self.height if self.visible else 0
        source: root.post_icons[0]['source'] if self.visible else 'graphics/blank.py'
    CAMIMenuBlock:
        id: block1
        visible: len(root.post_icons) > 1
        width: self.height if self.visible else 0
        source: root.post_icons[1]['source'] if self.visible else 'graphics/blank.py'
